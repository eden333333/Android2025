<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base app theme with SplashScreen customization -->
    <style name="Theme.Android2025" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- regular app background -->
        <item name="android:windowBackground">@color/light_gray</item>
        <!-- app colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="toolbarStyle">@style/Widget.Android2025.Toolbar</item>

    </style>

    <!-- SplashScreen -->
    <style name="Theme.Android2025.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>

        <item name="postSplashScreenTheme">@style/Theme.Android2025</item>
    </style>


    <!-- Toolbar style -->
    <style name="Widget.Android2025.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <!-- CircleImageView style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
