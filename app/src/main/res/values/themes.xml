<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base app theme: light gray background + blue toolbar with white text -->
    <style name="Theme.Android2025" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Screen background -->
        <item name="android:windowBackground">@color/light_gray</item>

        <!-- Toolbar/AppBar colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="toolbarStyle">@style/Widget.Android2025.Toolbar</item>
    </style>

    <!-- Toolbar style -->
    <style name="Widget.Android2025.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

</resources>
